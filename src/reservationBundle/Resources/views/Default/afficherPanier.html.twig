    <script>
      function myFunction(idReservation) {
        var quantite =  document.getElementById("quantite").value;
        // alert(description+id);
        window.location.href = 'http://localhost/techeventsweb/web/app_dev.php/modifierReservation/'+idReservation+'/'+quantite;
      }
    </script>
    <script>
      var table=document.getElementById("mytab1");
      var r=1;
      var quantite=0;
      var prix = 0;
      var total = 0 ;
      while(row=table.rows[r++])
      {
        var c=0;
        while(cell=row.cells[c++])
        {
          if (c==2) {
            quantite = cell.innerText
          }
          if(c==4){
            prix  = cell.innerText
          }
        }
        total = total + prix*quantite;
      }

      document.getElementById("content").innerHTML = total;
       function myfunction(total){
        window.location.href = "http://localhost/techeventsweb/web/app_dev.php/checkout/"+total;
      }
    </script>


